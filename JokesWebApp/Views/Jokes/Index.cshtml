@model IEnumerable<JokesWebApp.Models.Joke>

@{
    ViewData["Title"] = "Index";
}

<h1>Here are your friends</h1>

<p>
    <a asp-action="Create">Add or remove a friend</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JokeQuetion)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JokeQuetion)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit your friendship</a> |
                <a asp-action="Details" asp-route-id="@item.Id">View their profile</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Remove Friend</a>
            </td>
        </tr>
}
    </tbody>
</table>
